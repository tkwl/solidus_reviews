<% content_for :page_title do %>
	<%= I18n.t("spree.editing_review_for_html", link: link_to(@review.product.name, product_path(@review.product))) %>
<% end %>

<% render 'spree/admin/shared/sub_menu/product' %>

<%= form_for([:admin, @review]) do |f| %>
	<div class="col-md-12">
		<% unless @review.title.blank? %>
			<h2><%= @review.title %></h2>
		<% end %>
		<p>
			<%= simple_format(@review.review) %>
		</p>
	</div>

	<div class="col-md-8">
		<%= render 'form', f: f %>
	</div>

	<div class="clear"></div>

	<fieldset class="no-border-top">
		<%= render 'spree/admin/shared/edit_resource_links' %>
	</fieldset>
<% end %>
